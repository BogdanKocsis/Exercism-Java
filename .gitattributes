# Count only Java as source
*.java linguist-detectable

# Treat everything else as non-detectable for language stats
* -linguist-detectable
*.java linguist-detectable

# Keep only Java source files in GitHub language stats
*.java linguist-detectable=true

# Exclude common non-Java files
*.md linguist-detectable=false
*.txt linguist-detectable=false
*.yml linguist-detectable=false
*.yaml linguist-detectable=false
*.json linguist-detectable=false
*.xml linguist-detectable=false
*.properties linguist-detectable=false
*.gradle linguist-detectable=false
*.kts linguist-detectable=false
*.bat linguist-detectable=false
*.sh linguist-detectable=false

# Exclude generated/build folders
build/** linguist-detectable=false
out/** linguist-detectable=false
.gradle/** linguist-detectable=false
target/** linguist-detectable=false

# If you have IDE files
.idea/** linguist-detectable=false
.vscode/** linguist-detectable=false
*.iml linguist-detectable=false
